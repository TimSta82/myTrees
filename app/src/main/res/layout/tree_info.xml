<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="4dp"
    android:elevation="4dp"
    app:cardCornerRadius="4dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/image_info"
            android:layout_centerHorizontal="true"
            android:layout_width="160dp"
            android:layout_height="160dp"
            android:src="@drawable/bonsai" />

        <TextView
            android:id="@+id/text_tree_info_date"
            android:text="1.1.1950"
            android:layout_marginTop="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:layout_below="@id/image_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/text_tree_info_description"
            android:text="bjkbsajkdbjasbdjkbjsbdjksabjkbsajkbasjdbjkasbjbasjkbjkasbjkasbdjkasbjkdbasjkbasdjkbasdjkbasjkasbkjbaskj"
            android:layout_width="match_parent"
            android:layout_marginTop="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:layout_below="@id/text_tree_info_date"
            android:layout_height="wrap_content" />

    </RelativeLayout>

</android.support.v7.widget.CardView>